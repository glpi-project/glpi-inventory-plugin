{% import "components/form/fields_macros.html.twig" as fields %}

{% set no_header = true %}
<div class="asset">
    {{ include('components/form/header.html.twig', {'in_twig': true}) }}

    {% set rand = random() %}
    {% set params  = params ?? [] %}
    {% set target       = params['target'] ?? item.getFormURL() %}
    {% set withtemplate = params['withtemplate'] ?? '' %}
    {% set item_type = item.getType() %}
    {% set field_options = {'rand': rand} %}

    <div class="card-body d-flex flex-wrap">
        <div class="col-12 flex-column">
            <div class="d-flex flex-row flex-wrap flex-xl-nowrap">
                <div class="row flex-row align-items-start flex-grow-1">
                    <div class="row flex-row">
                        {{ fields.dropdownNumberField(
                            'threads_networkdiscovery',
                            item.getValue('threads_networkdiscovery'),
                            __('Threads number', 'glpiinventory') ~ ' (' ~ __('Network discovery', 'glpiinventory') ~ ')',
                            field_options|merge({
                                'min': 1,
                                'max': 400
                            })
                        ) }}

                        {{ fields.dropdownNumberField(
                            'threads_networkinventory',
                            item.getValue('threads_networkinventory'),
                            __('Threads number', 'glpiinventory') ~ ' (' ~ __('Network inventory (SNMP)', 'glpiinventory') ~ ')',
                            field_options|merge({
                                'min': 1,
                                'max': 400
                            })
                        ) }}

                        {{ fields.dropdownNumberField(
                            'timeout_networkdiscovery',
                            item.getValue('timeout_networkdiscovery'),
                            __('SNMP timeout', 'glpiinventory') ~ ' (' ~ __('Network discovery', 'glpiinventory') ~ ')',
                            field_options|merge({
                                'min': 1,
                                'max': 400
                            })
                        ) }}

                        {{ fields.dropdownNumberField(
                            'timeout_networkinventory',
                            item.getValue('timeout_networkinventory'),
                            __('SNMP timeout', 'glpiinventory') ~ ' (' ~ __('Network inventory (SNMP)', 'glpiinventory') ~ ')',
                            field_options|merge({
                                'min': 1,
                                'max': 400
                            })
                        ) }}
                    </div> {# .row #}
                </div> {# .row #}
            </div> {# .flex-row #}
        </div>
    </div> {# .card-body #}

    {% if no_form_buttons is not defined or no_form_buttons == false %}
        {{ include('components/form/buttons.html.twig') }}
    {% endif %}

</div> {# .asset #}
