{% import "components/form/fields_macros.html.twig" as fields %}
{% set field_options = {'rand': random()} %}
<form method="POST" action="{{ item.getFormURL() }}">
    <div class="modal modal-xl" tabindex="-1" id="add_collect">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">{{ __('Add a new collect configuration') ~ '(' ~ collect.getTypes()[collect.getField('type')] ~ ')' }}</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    {{ include('@glpiinventory/forms/collect/add_' ~ collect.getField('type') ~ '.html.twig') }}
                </div>
                <div class="modal-footer">
                    {{ fields.hiddenField('plugin_glpiinventory_collects_id', collects_id) }}
                    {{ fields.hiddenField('_glpi_csrf_token', csrf_token()) }}
                    <button type="submit" name="add" class="btn btn-primary" data-bs-dismiss="modal"><i class="ti ti-plus"></i>{{ __('Add') }}</button>
                </div>
            </div>
        </div>
    </div>
</form>

<div class="firstbloc">
    <button type="button" class="btn btn-primary" data-bs-toggle="modal"
            data-bs-target="#add_collect">
        <i class="ti ti-plus"></i>
        {{ __('Add') }}
    </button>
</div>
