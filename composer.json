{
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "glpi-project/tools": "^0.6",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "conflict": {
        "psr/container": "^2.0"
    },
    "autoload": {
        "classmap": [
            "inc/"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "platform": {
            "php": "7.4.0"
        },
        "sort-packages": true
    }
}
